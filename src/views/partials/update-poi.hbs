<form class="box" action="/updatepoi/{{poi._id}}" method="POST">
  <label class="label">Update Point of Interest Details:</label>

  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <input class="input" type="text" name="name" value="{{poi.name}}">
    </div>
  </div>

  <div class="field">
    <label class="label">Description</label>
    <div class="control">
      <textarea class="textarea" name="description">{{poi.description}}</textarea>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-body">

      <div class="field">
        <label class="label">Latitude</label>
        <div class="control">
          <input class="input" type="number" step="any" name="latitude" value="{{poi.latitude}}">
        </div>
      </div>

      <div class="field">
        <label class="label">Longitude</label>
        <div class="control">
          <input class="input" type="number" step="any" name="longitude" value="{{poi.longitude}}">
        </div>
      </div>

    </div>
  </div>

  <div class="field">
    <button class="button is-primary">Update Point of Interest</button>
  </div>
</form>
